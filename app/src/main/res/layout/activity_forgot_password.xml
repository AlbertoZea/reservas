<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ingreso"
    tools:context=".ForgotPassword"
    android:padding="25dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/loginImageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/logopc"
        android:transitionName="logoImageTrans"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/bienvenidoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tu correo"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="12dp"
        android:textSize="40sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:transitionName="textTrans"/>

    <TextView
        android:id="@+id/continuarLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recupera tu contraseÃ±a"
        android:textColor="@android:color/white"
        android:layout_marginBottom="30dp"
        android:transitionName="iniciaSesionTextTrans"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="437dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usuarioTextField"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/white"
            android:layout_marginBottom="200dp"
            android:transitionName="emailInputTextTrans"
            android:hint="Email">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/white" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/recuperarBoton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTint="#DC1C75"
            android:text="Recuperar"
            android:transitionName="buttonSignInTrans"
            app:backgroundTint="#DC1C75"  />
    </LinearLayout>

</LinearLayout>